<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="ListViewStyle" parent="android:Widget.AbsListView">
        <item name="android:cacheColorHint">@null</item>
        <item name="android:scrollingCache">false</item>
        <item name="android:smoothScrollbar">true</item>
        <item name="android:fastScrollEnabled">false</item>
    </style>

    <style name="TextStyle_1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle_2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextStyle_3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextStyle_3_row_light" parent="TextStyle_3">
        <item name="android:paddingTop">4dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_gravity">fill_horizontal</item>
    </style>

    <style name="TextStyle_3_row_dark" parent="TextStyle_3_row_light">

    </style>

    <style name="EditTextStyle_1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:ems">20</item>
        <item name="android:lines">1</item>
    </style>

    <style name="EditTextStyle_2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:ems">20</item>
        <item name="android:inputType">textMultiLine|text</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="ButtonStyle_1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
